<?xml version="1.0" encoding="utf-8"?>
<bavix created-with="https://github.com/bavix/xml" created-at="2017-05-04 10:51:07">
  <http>
    <type>http</type>
    <scheme>http</scheme>
    <domain>(.+\.)?example.com</domain>
    <resolver>
      <cp>
        <type>prefix</type>
        <path>(/&lt;language:[a-z]{2}&gt;)/cp</path>
        <resolver>
          <dashboard>
            <type>pattern</type>
            <path>/dashboard</path>
            <defaults>
              <controller>dashboard</controller>
            </defaults>
            <methods>GET</methods>
            <methods>HEAD</methods>
          </dashboard>
          <post>
            <type>pattern</type>
            <path>/post(/&lt;id&gt;)</path>
          </post>
          <posts>
            <type>pattern</type>
            <path>/posts(/&lt;id&gt;(/&lt;type&gt;))</path>
            <defaults>
              <type>list</type>
              <controller>posts</controller>
            </defaults>
          </posts>
        </resolver>
        <defaults>
          <controller>post</controller>
          <processor>cp</processor>
          <action>default</action>
          <language>en</language>
        </defaults>
        <methods>FETCH</methods>
        <methods>GET</methods>
      </cp>
    </resolver>
    <methods>POST</methods>
    <methods>GET</methods>
  </http>
  <admin>
    <type>prefix</type>
    <path>/admin</path>
    <resolver>
      <dashboard>
        <type>pattern</type>
        <path>/dashboard</path>
        <defaults>
          <controller>dashboard</controller>
        </defaults>
      </dashboard>
    </resolver>
  </admin>
  <default>
    <type>pattern</type>
    <path>/&lt;any:\w+&gt;</path>
    <path>
      <any>.*</any>
    </path>
    <defaults>
      <controller>hello</controller>
      <action>world</action>
      <any>hello-world</any>
    </defaults>
  </default>
</bavix>
